  luku1 = prompt("Anna eka luku");		//Toimii
  luku2 = prompt("Anna toka luku");
  luku3 = prompt("Anna kolmas luku");
  var summa;



  summa = +luku1 + +luku2 + +luku3;
  document.write("Lukujen summa on: " + summa);


</script>
