tehtävä 3
<script language="JavaScript">

  var sade = prompt("mikä on ympyrän säde");
  pintaala = (Math.PI * sade *sade);
  document.write("Jos ympyrän säde on " + sade + " niin sen pinta-ala on " + pintaala + " cm.");

</script>

tehtävä 4
<script language="JavaScript">


  var kanta = prompt("Anna kulmion kanta");
  var korkeus = prompt("Anna kulmion korkeus");
  var kanta1 = prompt("Anna kulmion kanta uudelleen");
  var korkeus2 = prompt("Anna kulmion korkeus uudelleen");

  pintaala = ((kanta * korkeus) / 2);


  document.write(" Pinta-ala on " + pintaala);

  piiri = ((kanta1 + korkeus2 ) * 2);
  document.write("ja piiri on " + piiri );


</script>

