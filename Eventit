    //Script
    
 'use strict';



const img = document.querySelector('p');

p.onmouseenter = showMouseOver;
p.onmouseleave = showMouseOut;


function showMouseOver()
{
    let p = document.getElementById("p");
    const text = document.querySelector('p').style.background = "white";
}

function showMouseOut()
{
    let p = document.getElementById("p");
    const teksti = document.querySelector('p').style.background = "white";
}

