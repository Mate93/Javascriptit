//Scripti
const nappi = document.querySelector('button');
nappi.addEventListener('click', function(evt){
  alert('Nappia klikattu');
});

Teht 2

    <script src="js/teht2.js"></script>
    <link rel="stylesheet" type="text/css" href="teht2.css"> 
    
    //Script
    
  const img = document.querySelector('img');

  img.onmouseover = showMouseOver;
  img.onmouseout = showMouseOut;


function showMouseOver()
{
  let p = document.getElementById("notice");
  p.innerHTML = 'mouse over detected';
}

function showMouseOut()
{
  let p = document.getElementById("notice");
  p.innerHTML = 'mouse out detected';
}


    
    
    
